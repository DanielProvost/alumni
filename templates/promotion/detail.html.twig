{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Fiche détaillée de la promotions</h1>


            <ul>
                <li>Nom de la promotion : {{ promotions.degree.name}}</li><br>
                <li>Année : {{ promotions.year.title }}</li><br>
                <li>Date de début de la promotion : {{ promotions.startDate.date |date('d/m/y') }}</li><br>
                <li>Date de fin : {{ promotions.endDate.date |date('d/m/y') }}</li><br>
                <li>Notes : {{ promotions.notes }}</li><br>
            </ul>


    </div>
{% endblock %}